    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug tests watch mode",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${cwd}/node_modules/.bin/jest",
            "args": ["--runInBand", "--no-cache", "--watchAll"],
            "cwd": "${workspaceRoot}/example",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}